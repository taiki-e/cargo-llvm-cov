# EditorConfig configuration
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,md,yml}]
indent_size = 2

[*.yml]
quote_type = single

[*.sh]
binary_next_line = true
switch_case_indent = true
